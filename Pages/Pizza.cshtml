@page
@model MyApp.Namespace.PizzaModel
@{
}

<div class='text-center'>
  <div class='mainText'>
    <h1 class="text-capitalize mainTitle">Our great selection of Pizzas!</h1>
    <h4>Choose one, or try our pizza builder! Then order and done!</h4>    
    <h4>No need to give any of the details</h4>    
    <h4>We already know everything!</h4>  
    <p class='smallText'><i>Only one pizza per order.</i></p>  

    <div class='container'>
      <div class='row'>
        <div class='col-12 mb-5 mt-5'>
          <div class='w-100 row makeYourOwnDiv'>
            <div class='col-4'>
              <img 
                src="~/images/Pizzas/Create.png" 
                alt="Create pizza"
                class='w-100'
              >
            </div>
            <div class='col-8 align-items-center'>
              <div class="align-middle makeYourOwnText">
                <h3 style='text-align: left;'>Create your own Pizza</h3>
                <p style='text-align: left;'>
                  Make your own Pizza with our own Pizza Maker
                </p>
                <a 
                  class='btn btn-primary' 
                  style='float: left;' 
                  asp-area=""
                  asp-page="Forms/CustomPizza"
                >
                  Try now
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>