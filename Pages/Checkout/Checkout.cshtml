@page
@model MyApp.Namespace.CheckoutModel
@{
}

<div 
  class="container w-50 border border-dark-subtle bg-light p-5 d-flex flex-column align-items-center rounded-3 mt-3"
>
  <h1 class="mainTitle mb-5">Your Order</h1>
  @{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".png");
  }
  <div class="align-content-center">
    <div class="col-12 mx-auto d-flex flex-column align-items-center">
      <img 
        class="w-50 mb-5" 
        src=@imagePath
        asp-append-version="true" 
      />
      <div class="mainSubtitle d-flex flex-column align-items-center mb-1">
        <p>Your order for the @Model.PizzaName Pizza is ready!</p>
        <p>Total price for your order is: @Model.PizzaPrice</p>
      </div>
      <a 
        class="btn btn-outline-primary mt-1 mx-auto" 
        asp-area="" 
        asp-page="ThankYou"
      >
        Confirm Order
      </a>
    </div>
  </div>
</div>